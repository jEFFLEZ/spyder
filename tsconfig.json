{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@rome/*": ["src/rome/*"]
    },
    "types": ["node", "vitest"]
  },
  "include": [
    "src/**/*",
    "extensions/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}