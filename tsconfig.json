{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node", "vitest"],
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@daemon/*": ["src/daemon/*"],
      "@commands/*": ["src/commands/*"],
      "@rome/*": ["src/rome/*"],
      "@supervisor/*": ["src/supervisor/*"]
    }
  },
  "exclude": ["node_modules", "dist", "qflush", "extensions/**/out/**"]
}