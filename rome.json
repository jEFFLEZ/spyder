{
  "workspaces": {
    "patterns": [
      "server",
      "backend",
      "api",
      "web",
      "front",
      "client",
      "app",
      "apps/*",
      "packages/*",
      "services/*",
      "src/*"
    ],
    "exclude": [
      "node_modules",
      ".git",
      "dist",
      "build"
    ]
  },
  "packageManager": "auto",
  "scripts": {
    "build": "build",
    "test": "test",
    "lint": "lint",
    "dev": "dev"
  },
  "processes": {
    "server": {
      "command": "npm run dev",
      "cwd": "apps/server",
      "detach": true,
      "restart": "always",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "web": {
      "command": "npm run dev",
      "cwd": "apps/web",
      "detach": true,
      "restart": "always"
    },
    "tunnel": {
      "command": "cloudflared tunnel --url http://127.0.0.1:3000",
      "detach": true,
      "restart": "on-failure"
    },
    "olloma": {
      "command": "olloma serve",
      "detach": true,
      "restart": "on-failure"
    }
  },
  "output": {
    "plain": false,
    "json": false,
    "noEmoji": false,
    "ci": false
  }
}