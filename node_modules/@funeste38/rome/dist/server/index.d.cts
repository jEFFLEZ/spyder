import { RequestHandler, Router } from 'express';

type HttpMethod = "GET" | "POST" | "PUT" | "PATCH" | "DELETE";
type RouteDef = {
    method: HttpMethod;
    path: string;
    name?: string;
};
type RouteTable = RouteDef[];

declare const routes: RouteTable;

type HandlerMap = Record<string, RequestHandler>;
declare function makeExpressRouter(handlers: HandlerMap): Router;

export { makeExpressRouter, routes };
