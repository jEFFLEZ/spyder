{
  "name": "@funeste38/rome",
  "version": "1.5.4",
  "description": "Tous les chemins mènent à Rome — CLI avancée pour monorepos avec gestion des processus détachés, auto-workspaces et compatibilité cross-platform.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/jEFFLEZ/rome.git"
  },
  "bugs": {
    "url": "https://github.com/jEFFLEZ/rome/issues"
  },
  "homepage": "https://github.com/jEFFLEZ/rome#readme",
  "author": "jEFFLEZ",
  "bin": {
    "rome": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./fixPath": {
      "import": "./dist/fixPath.js",
      "types": "./dist/fixPath.d.ts"
    },
    "./run": {
      "import": "./dist/run.js",
      "types": "./dist/run.d.ts"
    },
    "./duo": {
      "import": "./dist/duo.js",
      "types": "./dist/duo.d.ts"
    },
    "./trio": {
      "import": "./dist/trio.js",
      "types": "./dist/trio.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build",
    "release": "git add . && git commit -m \"chore: auto patch release\" && npm version patch && npm publish --access public && git push origin main --tags",
    "web:build": "npm --prefix apps/web run build",
    "web:dev": "npm --prefix apps/web run dev",
    "deploy": "npx netlify deploy --prod --dir=apps/web/dist --functions=netlify/functions",
    "deploy:build": "npm run web:build && npm run deploy",
    "start:a11": "node apps/server/server.cjs",
    "tunnel": "cloudflared tunnel --url http://127.0.0.1:3000",
    "rome:start": "rome start",
    "cockpit": "powershell -ExecutionPolicy Bypass -File scripts/rome-cockpit.ps1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "test-workspace"
  ],
  "license": "MIT",
  "keywords": [
    "cli",
    "workspaces",
    "monorepo",
    "dev",
    "typescript",
    "utils"
  ]
}
