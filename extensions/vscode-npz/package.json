{
  "name": "vscode-npz",
  "displayName": "NPZ Visual",
  "description": "Visualize NPZ engine scores and manage lanes from VS Code.",
  "version": "0.0.1",
  "publisher": "funeste38",
  "engines": { "vscode": "^1.70.0" },
  "repository": {
    "type": "git",
    "url": "https://github.com/jEFFLEZ/qflash.git"
  },
  "license": "MIT",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -p ./ -w"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.70.0"
  },
  "activationEvents": ["onCommand:npz.openScores"],
  "contributes": {
    "commands": [
      {
        "command": "npz.openScores",
        "title": "NPZ: Open Scores"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "NPZ Visual",
      "properties": {
        "npz.daemonUrl": {
          "type": "string",
          "default": "http://localhost:4500",
          "description": "URL of the NPZ daemon (including protocol and port)"
        },
        "npz.adminToken": {
          "type": "string",
          "default": "changeme",
          "description": "Admin token to call NPZ admin endpoints"
        }
      }
    }
  }
}