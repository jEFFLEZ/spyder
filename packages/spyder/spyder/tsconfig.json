{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
